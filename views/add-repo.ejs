<% include ./partials/header %>

<!-- Custom CSS -->
<link rel="stylesheet" href="/stylesheets/add-repo.css">

<div id="content" class="container main">

  <section id="form" class="py-5">

    <h2 class="d-flex mb-5 justify-content-center">Create New Repo Block</h2>

    <form action="/repos" method="POST">

        <div class="form-group row">
          <div class="col-12 col-sm-8">
            <input id="name" type="text" class="form-control" name="repo[name]" placeholder="name" required>
          </div>
        </div>

        <!-- <div class="form-group row">
            <div class="col-12 col-sm-8">
              <input type="file" accept="image/*" required>
            </div>
        </div> -->

        <div class="form-group row">
          <div class="col-12 col-sm-8">
            <textarea id="desc" class="form-control" rows="3" name="repo[desc]" placeholder="description" required></textarea>
          </div>
        </div>

        <div class="form-group row">
            <div class="col-12 col-sm-8">
                <input id="git_link" type="text" class="form-control" name="repo[gitLink]" placeholder="GitHub link" required>
            </div>
        </div>

        <div class="row mt-5">
          <div class="col-6 col-md-4">
            <button type="button" id="cancel-btn" class="btn btn-outline-danger float-right" onclick="history.back()">Cancel</button>
          </div>
          <div class="col-6 col-md-4">
            <button type="submit" id="create-btn" class="btn btn-outline-success float-left">Add Repo Block</button>
          </div>
        </div>

      </form>
    </section>
    
</div>

<% include ./partials/footer %>
